#LduiCalendar.style3 div.toolbar table.monthSelect {
	position:absolute;
	top:30px;
	left:6px;
	border-collapse:collapse;
}
#LduiCalendar.style3 div.toolbar table.monthSelect td {
	text-align:center;
	border:none;
	background-color:#fff;
}
#LduiCalendar.style3 div.toolbar table.monthSelect td a {
	display:block;
	width:14px;
	font-family:arial;
	font-size:9pt;
	font-weight:bold;
	color:#999;
	border-top:2px solid #eee;
	border-bottom:2px solid #eee;
}
#LduiCalendar.style3 div.toolbar table.monthSelect td.digit2 a {
	width:19px;
}
#LduiCalendar.style3 div.toolbar table.monthSelect td a:hover {
	color:#333;
	cursor:pointer;
	border-top:2px solid #333;
	border-bottom:2px solid #333;
}
#LduiCalendar.style3 div.toolbar table.monthSelect td.current a {
	color:#fff;
	background-color:#777;
}
#LduiCalendar.style3 div.toolbar table.monthSelect td.current a:hover {
	color:#fff;
}



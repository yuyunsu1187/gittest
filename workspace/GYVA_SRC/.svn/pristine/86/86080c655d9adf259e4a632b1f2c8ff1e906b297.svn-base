<script type="text/javascript">
//<![CDATA[    
    // 필수 입력정보인 아이디, 비밀번호가 입력되었는지 확인하는 함수
    function checkValue() {
        if(!document.userInfo.email.value){
            alert("이메일 형식의 아이디를 입력하세요.");
            return false;
        }
    }
    
    // 취소 버튼 클릭시 로그인 화면으로 이동
    function goLoginForm() {
        location.href="loginForm.do";
    }
//]]>     
</script>

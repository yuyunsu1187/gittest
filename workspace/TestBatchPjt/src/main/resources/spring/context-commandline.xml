<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- useful for launching this job on its own from the command line -->

	<import resource="classpath:/spring/context-global.xml" />
	<import resource="classpath:/spring/context-datasource.xml" />
	<import resource="classpath:/spring/context-transaction.xml" />
	<import resource="classpath:/spring/jobs/**/*.xml" />
</beans>
